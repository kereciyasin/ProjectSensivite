@model List<ProjectSensive.EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid">
    <!-- Title Bar -->
    <div class="row mb-4">

        <div class="col-md-6 text-right">
            <a class="btn btn-success" href="/Category/CreateCategory">
                <i class="fa fa-plus"></i> Add New
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Category List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            @* <th scope="col">#</th> *@
                            <th scope="col">Category Name</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* <th scope="row">@item.CategoryID</th> *@
                                <td>@item.CategoryName</td>
                                <td class="text-center">
                                    <a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-sm btn-warning mr-1">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <a href="/Category/DeleteCategory/@item.CategoryID" onclick="return confirm('Are you sure?');" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
