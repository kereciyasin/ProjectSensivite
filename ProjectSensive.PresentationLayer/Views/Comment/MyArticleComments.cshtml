@model List<ProjectSensive.EntityLayer.Concrete.Comment>

@{
    ViewData["Title"] = "MyArticleComments";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid mt-4">
    <h3 class="mb-2 font-weight-bold">Comments on My Posts</h3>
    <p class="text-muted">Only viewable. No actions available.</p>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Article</th>
                            <th>Content</th>
                            <th style="width: 160px;">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Article.Title</td>
                                <td>@item.CommentDetail</td>
                                <td>@item.CommentDate.ToString("dd MMM yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
