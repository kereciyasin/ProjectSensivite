@model ProjectSensive.EntityLayer.Concrete.Article

<div class="main_blog_details mb-5">
    <img class="img-fluid" src="@Model.CoverImageUrl" alt="@Model.Title">
    <a href="#"><h4>@Model.Title</h4></a>
    <div class="user_details">
        <div class="float-left">
            <a href="#">@Model.Category?.CategoryName</a>
        </div>
        <div class="float-right mt-sm-0 mt-3">
            <div class="media">
                <div class="media-body">
                    <h5>@Model.AppUser?.Name @Model.AppUser?.Surname</h5>
                    <p>@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</p>
                </div>
                <div class="d-flex">
                    <img width="42" height="42" src="img/blog/user-img.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <p>@Model.Description</p>
    <div class="news_d_footer flex-column flex-sm-row">
        <a href="#"><span class="align-middle mr-2"><i class="ti-heart"></i></span>Like</a>
        <a class="justify-content-sm-center ml-sm-auto mt-sm-0 mt-2" href="#">
            <span class="align-middle mr-2"><i class="ti-themify-favicon"></i></span>
            @Model.Comments?.Count() Comments
        </a>
    </div>
</div>
