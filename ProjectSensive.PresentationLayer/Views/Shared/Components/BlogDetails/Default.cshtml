@model List<ProjectSensive.EntityLayer.Concrete.Article>

@foreach (var item in Model)
{
    <div class="main_blog_details mb-5">
        <img class="img-fluid" src="@item.CoverImageUrl" alt="@item.Title">
        <a href="#"><h4>@item.Title</h4></a>
        <div class="user_details">
            <div class="float-left">
                <a href="#">@item.Category?.CategoryName</a>
            </div>
            <div class="float-right mt-sm-0 mt-3">
                <div class="media">
                    <div class="media-body">
                        <h5>@item.AppUser?.Name @item.AppUser?.Surname</h5>
                        <p>@item.CreatedDate.ToString("dd MMM yyyy HH:mm")</p>
                    </div>
                    <div class="d-flex">
                        <img width="42" height="42" src="img/blog/user-img.png" alt="">
                    </div>
                </div>
            </div>
        </div>
        <p>@item.Description</p>
        <div class="news_d_footer flex-column flex-sm-row">
            <a href="#"><span class="align-middle mr-2"><i class="ti-heart"></i></span>Like</a>
            <a class="justify-content-sm-center ml-sm-auto mt-sm-0 mt-2" href="#">
                <span class="align-middle mr-2"><i class="ti-themify-favicon"></i></span>
                @item.Comments?.Count() Comments
            </a>
        </div>
    </div>
}
