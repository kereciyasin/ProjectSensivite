@model ProjectSensive.PresentationLayer.Models.CommentAddViewModel

<div class="comment-form">
    <h4>Leave a Reply</h4>
    <form asp-controller="Comment" asp-action="AddComment" method="post">

        <input type="hidden" name="ArticleID" value="@Model.ArticleID" />

        <div class="form-group">
            <input type="text" class="form-control" name="Name" placeholder="Your Name" required />
        </div>

        <div class="form-group">
            <input type="email" class="form-control" name="Email" placeholder="Your Email" required />
        </div>

        <div class="form-group">
            <textarea class="form-control" name="CommentDetail" placeholder="Your comment..." required></textarea>
        </div>

        <button type="submit" class="button submit_btn">Post Comment</button>
    </form>
</div>
