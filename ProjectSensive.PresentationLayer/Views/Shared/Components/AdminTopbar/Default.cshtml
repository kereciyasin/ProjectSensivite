@model ProjectSensive.EntityLayer.Concrete.AppUser

<div class="topbar">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">

            <!-- Sidebar toggle -->
            <button class="btn btn-outline-primary me-2" id="sidebarCollapse">
                <i class="fa fa-bars"></i>
            </button>

            <!-- Logo -->
            <a class="navbar-brand" href="/Dashboard/Index">
                <img src="/pluto-1.0.0/images/logo/logo.png" alt="Logo" height="40" />
            </a>

            <!-- Right Section -->
            <ul class="navbar-nav ms-auto d-flex align-items-center">

                <!-- User Dropdown Only -->
                <li class="nav-item dropdown ms-3">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@Model.ImageUrl" class="rounded-circle me-2" height="40" width="40" style="object-fit: cover;" alt="User Image" />
                        <span>@Model.Name @Model.Surname</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/Profile/Index"><i class="fa fa-user me-2"></i> My Profile</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item text-danger" href="/Login/Logout"><i class="fa fa-sign-out me-2"></i> Log Out</a></li>
                    </ul>
                </li>

            </ul>

        </div>
    </nav>
</div>
