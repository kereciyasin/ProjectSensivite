@model List<ProjectSensive.PresentationLayer.Models.CategoryWithCountViewModel>
<div class="col-lg-4 sidebar-widgets">
    <div class="widget-wrap">
        <div class="single-sidebar-widget newsletter-widget">
            <h4 class="single-sidebar-widget__title">Newsletter</h4>
            <form method="post" action="/Newsletter/Subscribe">
                <div class="form-group mt-30">
                    <input type="email" name="email" class="form-control" placeholder="Enter email" required>
                </div>
                <button type="submit" class="bbtns d-block mt-20 w-100">Subscribe</button>
            </form>
            @if (TempData["SubscribeMessage"] != null)
            {
                <div class="alert alert-info mt-3">
                    @TempData["SubscribeMessage"]
                </div>
            }
        </div>


        <div class="single-sidebar-widget post-category-widget">
            <h4 class="single-sidebar-widget__title">Categories</h4>
            <ul class="cat-list mt-20">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="#" class="d-flex justify-content-between">
                            <p>@item.CategoryName</p>
                            <p>(@item.Count)</p>
                        </a>
                    </li>
                }
            </ul>
        </div>

        @await Component.InvokeAsync("PopularPost")


    </div>
</div>