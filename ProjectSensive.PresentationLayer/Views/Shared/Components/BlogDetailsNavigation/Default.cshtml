<div class="navigation-area">
    <div class="row">
        @if (ViewBag.Prev != null)
        {
            <div class="col-lg-6 col-md-6 col-12 nav-left flex-row d-flex justify-content-start align-items-center">
                <div class="thumb">
                    <a href="/Article/Detail/@ViewBag.Prev.ArticleID"><img class="img-fluid" src="/img/blog/prev.jpg" alt=""></a>
                </div>
                <div class="arrow">
                    <a href="/Article/Detail/@ViewBag.Prev.ArticleID"><span class="lnr text-white lnr-arrow-left"></span></a>
                </div>
                <div class="detials">
                    <p>Prev Post</p>
                    <a href="/Article/Detail/@ViewBag.Prev.ArticleID"><h4>@ViewBag.Prev.Title</h4></a>
                </div>
            </div>
        }

        @if (ViewBag.Next != null)
        {
            <div class="col-lg-6 col-md-6 col-12 nav-right flex-row d-flex justify-content-end align-items-center">
                <div class="detials">
                    <p>Next Post</p>
                    <a href="/Article/Detail/@ViewBag.Next.ArticleID"><h4>@ViewBag.Next.Title</h4></a>
                </div>
                <div class="arrow">
                    <a href="/Article/Detail/@ViewBag.Next.ArticleID"><span class="lnr text-white lnr-arrow-right"></span></a>
                </div>
                <div class="thumb">
                    <a href="/Article/Detail/@ViewBag.Next.ArticleID"><img class="img-fluid" src="/img/blog/next.jpg" alt=""></a>
                </div>
            </div>
        }
    </div>
</div>
