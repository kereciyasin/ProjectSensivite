@model List<ProjectSensive.EntityLayer.Concrete.Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="fw-bold">👋 Welcome back, @ViewBag.UserName!</h2>
            <br />
            <br />
            <p class="text-muted">Here’s what’s going on with your blog today.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm bg-gradient bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Your Articles</h5>
                    <p class="display-5 fw-bold">@ViewBag.ArticleCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm bg-gradient bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Comments Received</h5>
                    <p class="display-5 fw-bold">@ViewBag.CommentCount</p>
                </div>
            </div>
        </div>
        <!-- Diğer kutular eklenebilir -->
    </div>

    <div class="mt-5">
        <h4>Your Latest Articles</h4>
        <div class="list-group shadow-sm">
            @foreach (var article in Model)
            {
                <a href="/Article/Detail/@article.ArticleID" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">@article.Title</h6>
                        <small class="text-muted">@article.CreatedDate.ToString("dd MMM yyyy")</small>
                    </div>
                    <span class="badge bg-info text-dark">View</span>
                </a>
            }
        </div>
    </div>
</div>
