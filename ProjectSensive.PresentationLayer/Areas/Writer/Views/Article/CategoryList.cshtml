@model List<ProjectSensive.EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Areas/Writer/Views/AdminLayout/Index.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="font-weight-bold mb-0"><i class="fa fa-folder-open text-warning"></i> Category List</h4>
            <a href="/Writer/Category/AddCategory" class="btn btn-sm btn-primary shadow-sm">
                <i class="fa fa-plus-circle"></i> Add Category
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 text-center">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Category Name</th>
                                <th style="width: 180px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryID</td>
                                    <td class="text-left">@item.CategoryName</td>
                                    <td>
                                        <a href="/Writer/Category/EditCategory/@item.CategoryID" class="btn btn-sm btn-outline-primary mr-1">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="/Writer/Category/DeleteCategory/@item.CategoryID"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this category?');">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
