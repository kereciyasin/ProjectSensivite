@model List<ProjectSensive.EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3"><i class="fa fa-folder-open text-warning"></i> Category List</h2>

    <a asp-area="Writer" asp-controller="Category" asp-action="Add" class="btn btn-sm btn-success mb-3">
        <i class="fa fa-plus-circle"></i> Add Category
    </a>

    <table class="table table-bordered table-hover text-center">
        <thead class="thead-dark">
            <tr>
                <th style="width: 50px;">#</th>
                <th>Category Name</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td class="text-left">@item.CategoryName</td>
                        <td>
                            <a asp-area="Writer"
                               asp-controller="Category"
                               asp-action="Edit"
                               asp-route-id="@item.CategoryID"
                               class="btn btn-sm btn-primary mr-2">
                                <i class="fa fa-edit"></i> Edit
                            </a>

                            <a href="/Writer/AdminCategory/Delete/@item.CategoryID" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Delete
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

