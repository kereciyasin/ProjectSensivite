@model ProjectSensive.EntityLayer.Concrete.AppUser
<nav id="sidebar">
    <div class="sidebar_user_info">
        <div class="icon_setting"></div>
        <div class="user_profle_side">
            <div class="user_img">
                <img class="img-responsive" src="@Model.ImageUrl" alt="#" />
            </div>
            <div class="user_info">
                <h6>@Model.Name @Model.Surname</h6>
                <p><span class="online_animation"></span> Online</p>
            </div>
        </div>
    </div>
    <div class="sidebar_blog_2">
        <h4>Writer Panel</h4>
        <ul class="list-unstyled components">
            <li>
                <a href="/Writer/Dashboard">
                    <i class="fa fa-dashboard yellow_color"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/Writer/Profile">
                    <i class="fa fa-user purple_color"></i>
                    <span>My Profile</span>
                </a>
            </li>
            <li>
                <a href="/Writer/Article">
                    <i class="fa fa-pencil-square-o blue2_color"></i>
                    <span>My Articles</span>
                </a>
            </li>
            <li>
                <a href="/Writer/Comment">
                    <i class="fa fa-comments-o green_color"></i>
                    <span>My Comments</span>
                </a>
            </li>
            <li>
                <a href="/">
                    <i class="fa fa-globe orange_color"></i>
                    <span>Go to Site</span>
                </a>
            </li>
            <li>
                <a href="/Writer/Login/Logout">
                    <i class="fa fa-sign-out red_color"></i>
                    <span>Log Out</span>
                </a>
            </li>
        </ul>
    </div>

</nav>
